{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "tests/*": [
        "__tests__/*"
      ]
    },
    "useUnknownInCatchVariables": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ],
}